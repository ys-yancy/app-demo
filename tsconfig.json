{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "allowJs": true,
    "module": "es6",
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es5",
      "es2015",
      "dom",
      "scripthost"
    ]
  },

  "lib": [
    "ES5",
    "es2016",
    "dom",
  ],

  "include": [
    "./src/**/*"
  ],
  
  "exclude": [
    "node_modules"
  ]
}