{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "allowJs": true,
    "module": "es6",
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "jsx": "react"
  },

  "lib": [
    "es2015",
    "dom",
  ],

  "include": [
    "./src/**/*"
  ],
  
  "exclude": [
    "node_modules"
  ]
}